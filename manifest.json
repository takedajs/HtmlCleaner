{
  "description": "",
  "manifest_version": 2,
  "name": "HtmlCleaner",
  "version": "1.0",
  "homepage_url": "",
  "icons": {
    "48": ""
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "theme"
  ],

  "browser_action": {
    "default_icon": "",
    "default_title": "HtmlCleaner",
    "default_popup": "popup/keyword_save.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
  }]

}
